@mixin panel {
  position: absolute;
  color: red;
  line-height: 1.0em; 
}

$rounded_panel_padding_right: 20px;
$rounded_panel_height: 60px;
$rounded_panel_font_height: $rounded_panel_height - 20px;

@mixin rounded_panel {
  // border-top-left-radius: 40px;
  // border-bottom-left-radius: 40px;
  height: $rounded_panel_height;
  padding-right: $rounded_panel_padding_right;
  padding-top: ($rounded_panel_height - $rounded_panel_font_height) / 2 + 2;
  color: white;
  text-align: right;
  background: none;
}

$card_width: 800px;
$card_height: 900px;

$color_primary: #8f3774;
$color_primary_dark: #562146;

.theme-manhattan #card {
  background-color: $color_primary;
  position: relative;
  font-family: 'Coda';
  font-size: 3em;
  margin-left: 'auto';
  margin-right: 'auto';
  display: 'block';
  width: $card_width;
  height: $card_height;
}

$color_secondary: #999999;
$color_tertiary: orange;
$color_primary_light: #C7E2E2;
$color_secondary_light: #f9f9f9;

.theme-manhattan #panel-1 {
  top: 0px;
  left: 0px;
  width: 300px;
  height: $card_height;
  border-right: 70px solid rgba(255, 255, 255, 0.25);
  background-color: $color_primary;
  background: url(<%= asset_path 'manhattan.jpg' %>);
}

$name_top: 40px;
$name_height: 100px;
$name_padding_left: 20px;
$name_font_height: $name_height - 10px;

.theme-manhattan #name-div {
  @include panel;
  top: $name_top;
  width: $card_width - $name_padding_left;
  height: $name_height;
  font-size: $name_font_height;
  color: white;
  padding-left: $name_padding_left;
  padding-top: ($name_height - $name_font_height) / 2 + 10px;
  text-transform: uppercase;
  background: rgba(255, 255, 255, 0.5);
}

$job_title_top: 180px;
$job_title_height: 45px;
$job_title_font_height: $job_title_height - 10px;
$job_title_padding_left: 27px;


.theme-manhattan #job-title-div {
  @include panel;
  @include panel;
  top: $job_title_top;
  width: $card_width - $job_title_padding_left;
  height: $job_title_height;
  padding-left: $job_title_padding_left;
  color: white;
  font-size: $job_title_font_height;
  padding-top: ($job_title_height - $job_title_font_height) / 2 + 2;
}

$website_top: 420px;
$website_width: $card_width;

.theme-manhattan #website-div {
  @include panel;
  @include rounded_panel;
  top: $website_top;
  left: $card_width - $website_width - $rounded_panel_padding_right;
  width: $website_width;
}

$phone_number_top: $website_top + $rounded_panel_height + 0px;
$phone_number_width: $card_width - 300px;
$phone_number_padding_right: 30px;
$phone_number_height: 60px;
$phone_number_font_height: $phone_number_height - 20px;

.theme-manhattan #phone-number-div {
  @include panel;
  @include rounded_panel;
  top: $phone_number_top;
  left: $card_width - $phone_number_width - $rounded_panel_padding_right;
  width: $phone_number_width;
}

$email_top: $phone_number_top + $rounded_panel_height + 0px;
$email_width: $card_width - 150px;
$email_padding_right: 20px;
$email_height: 60px;
$email_font_height: $email_height - 20px;

.theme-manhattan #email-div {
  @include panel;
  @include rounded_panel;
  top: $email_top;
  left: $card_width - $email_width - $rounded_panel_padding_right;
  width: $email_width;
}

$organization_top: 650px;
$organization_height: 180px;
$organization_font_height: 40px;
$organization_padding_left: 27px;

.theme-manhattan #organization-div {
  @include panel;
  top: $organization_top;
  width: $card_width - $organization_padding_left;
  height: $organization_height;
  padding-left: $organization_padding_left;
  color: $color-primary-dark;
  font-size: $organization_font_height;
  padding-top: 40px;
  background: rgba(255, 255, 255, 0.75);
}

$address_top: $organization_top + 30px;
$address_padding_left: 25px;
$address_height: 140px;
$address_font_height: ($address_height / 2) - 20px;
$address_width: 760px;

.theme-manhattan #address-div {
  @include panel;
  top: $address_top + 6px;
  width: 800px - $address_padding_left;
  height: $address_height;
  padding-left: $address_padding_left;
  color: $color-primary-dark;
  padding-top: ($address_height - $address_font_height) / 2 + 2;
}
