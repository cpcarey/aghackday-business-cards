<p id="notice"><%= notice %></p>

<%= render :partial => 'cards/card', :locals => { :card => @card } %>

<%= link_to "QR Code",
    { 
      :controller => "cards", 
      :action => "qr_code", 
      :id => @card.id
    },
    :class => 'card-button' %>
    
<%= link_to "Save to Contacts (iOS)", 
    { 
      :controller => "cards", 
      :action => "ics", 
      :id => @card.id
    },  
    :class => 'card-button' %>

<%= link_to "Save to Contacts (Android)",
    { 
      :controller => "cards", 
      :action => "vcard", 
      :id => @card.id 
    },
    :class => 'card-button' %>
    
<%= link_to "Save to Collection",
    { 
      :controller => "cards", 
      :action => "save_to_collection", 
      :id => @card.id 
    },
    :class => 'card-button' %>

<% if session[:user_id] %>
<%= link_to "Back to Account",
    { 
      :controller => "users", 
      :action => "show", 
      :id => session[:user_id] 
    },
    :class => 'card-button card-button-last' %>
<% else %>
<%= link_to "Login or Sign-up",
    { 
      :controller => "admin", 
      :action => "login"
    },
    :class => 'card-button card-button-last' %>
<% end %>
