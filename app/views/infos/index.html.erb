<h1>Listing infos</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Organization</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Email</th>
    <th>Website</th>
    <th>Job title</th>
    <th>Logo url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @infos.each do |info| %>
  <tr>
    <td><%= info.first_name %></td>
    <td><%= info.last_name %></td>
    <td><%= info.organization %></td>
    <td><%= info.address_line_1 %>, <%= info.address_line_2 %></td>
    <td><%= info.phone_number %></td>
    <td><%= info.email %></td>
    <td><%= info.website %></td>
    <td><%= info.job_title %></td>
    <td><%= info.logo_url %></td>
    <td><%= link_to 'Show', info %></td>
    <td><%= link_to 'Edit', edit_info_path(info) %></td>
    <td><%= link_to 'Destroy', info, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

